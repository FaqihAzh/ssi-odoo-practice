<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form -->
    <record id="view_stock_opname_wizard_form" model="ir.ui.view">
        <field name="name">Stock Opname Wizard</field>
        <field name="model">tpart.stock.opname.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock Opname">
                <sheet>
                    <group>
                        <field name="location_id"/>
                    </group>
                    <separator string="Lines"/>
                    <field name="line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="part_id"/>
                            <field name="system_qty"/>
                            <field name="real_qty"/>
                            <field name="difference" readonly="1"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="action_generate_lines" type="object" string="Generate Lines" class="oe_highlight"/>
                    <button name="action_export_excel" type="object" string="Export Excel" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action & Menu -->
    <record id="action_stock_opname_wizard" model="ir.actions.act_window">
        <field name="name">Stock Opname</field>
        <field name="res_model">tpart.stock.opname.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_opname" name="Stock Opname"
              parent="menu_teknoparts_root"
              action="action_stock_opname_wizard"
              sequence="30"/>
</odoo>