<odoo>
    <template id="report_sparepart_summary">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <!-- HEADER -->
                    <div class="text-center mb-4">
                        <h2 style="color:#4472C4;">üì¶ Spare Part Summary Report</h2>
                        <p>
                            Generated on:
                            <strong>
                                <span t-esc="format_datetime(fields.Datetime.now(), dt_format='%Y-%m-%d %H:%M')"/>
                            </strong>
                        </p>
                    </div>

                    <!-- STATISTICS -->
                    <div class="row mb-4">
                        <div class="col-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5>Total Parts</h5>
                                    <h3><t t-esc="len(parts)"/></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5>Total Stock</h5>
                                    <h3><t t-esc="sum(parts.mapped('qty_on_hand'))"/></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5>Low Stock</h5>
                                    <h3><t t-esc="len([p for p in parts if 0 &lt; p.qty_on_hand &lt;= 10])"/></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5>Out of Stock</h5>
                                    <h3><t t-esc="len([p for p in parts if p.qty_on_hand == 0])"/></h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- PARTS LIST -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header" style="background:#4472C4; color:white;">
                                    <h5>üìã Spare Parts List</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-sm table-striped">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>Part Number</th>
                                                <th>Name</th>
                                                <th>Brand</th>
                                                <th>Price</th>
                                                <th>Stock</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="parts" t-as="part">
                                                <tr>
                                                    <td>
                                                        <img t-if="part.image"
                                                             t-att-src="'data:image/png;base64,%s' % part.image"
                                                             style="max-width:40px; max-height:40px;"
                                                             alt="Part Image"/>
                                                        <t t-if="not part.image">
                                                            <span>No Image</span>
                                                        </t>
                                                    </td>
                                                    <td><span t-field="part.part_number"/></td>
                                                    <td><span t-field="part.name"/></td>
                                                    <td><span t-field="part.brand"/></td>
                                                    <td><span t-field="part.price"/></td>
                                                    <td><span t-field="part.qty_on_hand"/></td>
                                                    <td>
                                                        <t t-if="part.qty_on_hand &gt; 10">
                                                            <span class="badge bg-success">Sufficient</span>
                                                        </t>
                                                        <t t-elif="0 &lt;= part.qty_on_hand &lt;= 10">
                                                            <span class="badge bg-warning">Low</span>
                                                        </t>
                                                        <t t-else="">
                                                            <span class="badge bg-danger">Out</span>
                                                        </t>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- BRAND DISTRIBUTION -->
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="card">
                                <div class="card-header" style="background:#4472C4; color:white;">
                                    <h5>üè≠ Brand Distribution</h5>
                                </div>
                                <div class="card-body">
                                    <t t-set="brands" t-value="[(b, len([p for p in parts if p.brand == b])) for b in set(parts.mapped('brand'))]"/>
                                    <t t-foreach="brands" t-as="brand_item">
                                        <div class="d-flex align-items-center mb-2">
                                            <span class="me-2"><t t-esc="brand_item[0]"/> (<t t-esc="brand_item[1]"/>)</span>
                                            <div class="progress flex-grow-1 mx-2" style="height:8px;">
                                                <div class="progress-bar"
                                                     t-att-style="'width: %s%%' % ((brand_item[1] / max(len(parts),1)) * 100)">
                                                </div>
                                            </div>
                                            <span><t t-esc="'%d%%' % ((brand_item[1] / max(len(parts),1)) * 100)"/></span>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>

                        <!-- STOCK STATUS -->
                        <div class="col-6">
                            <div class="card">
                                <div class="card-header" style="background:#4472C4; color:white;">
                                    <h5>üì¶ Stock Status</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <h4 class="text-success">
                                                <t t-esc="len([p for p in parts if p.qty_on_hand &gt; 10])"/>
                                            </h4>
                                            <p>Sufficient</p>
                                        </div>
                                        <div class="col-4">
                                            <h4 class="text-warning">
                                                <t t-esc="len([p for p in parts if 0 &lt; p.qty_on_hand &lt;= 10])"/>
                                            </h4>
                                            <p>Low Stock</p>
                                        </div>
                                        <div class="col-4">
                                            <h4 class="text-danger">
                                                <t t-esc="len([p for p in parts if p.qty_on_hand == 0])"/>
                                            </h4>
                                            <p>Out of Stock</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- TOP 10 PARTS -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header" style="background:#4472C4; color:white;">
                                    <h5>üèÜ Top 10 Parts by Stock</h5>
                                </div>
                                <div class="card-body">
                                    <t t-set="top_parts" t-value="parts.sorted('qty_on_hand', reverse=True)[:10]"/>
                                    <table class="table table-sm table-striped">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Part Number</th>
                                                <th>Name</th>
                                                <th>Brand</th>
                                                <th>Stock</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="top_parts" t-as="part" t-foreach-index="idx">
                                                <tr>
                                                    <td><t t-esc="idx + 1"/></td>
                                                    <td><strong><span t-field="part.part_number"/></strong></td>
                                                    <td><span t-field="part.name"/></td>
                                                    <td><span t-field="part.brand"/></td>
                                                    <td><strong><span t-field="part.qty_on_hand"/></strong></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- FOOTER -->
                    <div class="footer mt-4 pt-3" style="border-top:1px solid #ddd; text-align:center; color:#666;">
                        <small>
                            Summary report generated by
                            <strong><span t-field="env.user.name"/></strong>
                            on
                            <strong><span t-esc="format_datetime(fields.Datetime.now(), dt_format='%d %B %Y %H:%M')"/></strong>
                            ‚Ä¢ TeknoParts Inventory System
                        </small>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
