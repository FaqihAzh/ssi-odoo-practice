<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="qc_failure_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc_batch">
                <div class="page">
                    <div class="oe_structure"/>
                    <main>
                        <h2 class="text-center">Laporan Kegagalan QC</h2>
                        <table class="table table-hover table-sm" style="margin-top: 2rem;">
                            <thead style="background-color: #dc3545; color: white;">
                                <tr>
                                    <th>No</th>
                                    <th>No. QC</th>
                                    <th>Supplier</th>
                                    <th>Part</th>
                                    <th style="text-align: center;">Qty Check</th>
                                    <th style="text-align: center;">Fail</th>
                                    <th>% Fail</th>
                                    <th>Keterangan</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Show only records with failures -->
                                <t t-set="counter" t-value="1"/>
                                <t t-foreach="docs" t-as="o">
                                    <t t-if="o.qty_fail > 0">
                                        <tr>
                                            <td><span t-esc="counter"/></td>
                                            <td><span t-field="o.name"/></td>
                                            <td><span t-field="o.receipt_id.partner_id.name"/></td>
                                            <td><span t-field="o.part_id.name"/></td>
                                            <td style="text-align: center;"><span t-field="o.qty_check"/></td>
                                            <td style="text-align: center;"><span t-field="o.qty_fail"/></td>
                                            <td>
                                                <t t-set="fail_percentage" t-value="(o.qty_fail / max(o.qty_check, 1)) * 100"/>
                                                <span t-esc="'%.1f' % fail_percentage"/> %
                                            </td>
                                            <td><span t-field="o.note"/></td>
                                        </tr>
                                        <t t-set="counter" t-value="counter + 1"/>
                                    </t>
                                </t>
                                <!-- Show message if no failures found -->
                                <t t-set="has_failures" t-value="any(o.qty_fail > 0 for o in docs)"/>
                                <tr t-if="not has_failures">
                                    <td colspan="8" style="text-align: center; color: #28a745; padding: 2rem;">
                                        <strong>Tidak ada kegagalan QC ditemukan - Semua parts lulus QC!</strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Summary -->
                        <div style="margin-top: 2rem;">
                            <h4>Ringkasan</h4>
                            <div class="row">
                                <div class="col-6">
                                    <p><strong>Total QC Records:</strong> <span t-esc="len(docs)"/></p>
                                    <p><strong>Records dengan Kegagalan:</strong>
                                       <span t-esc="sum(1 for o in docs if o.qty_fail > 0)"/></p>
                                </div>
                                <div class="col-6">
                                    <p><strong>Total Qty Diperiksa:</strong>
                                       <span t-esc="sum(o.qty_check for o in docs)"/></p>
                                    <p><strong>Total Qty Gagal:</strong>
                                       <span t-esc="sum(o.qty_fail for o in docs)"/></p>
                                </div>
                            </div>
                        </div>

                        <!-- Footer -->
                        <div style="margin-top: 3rem; text-align: center; color: #6c757d;">
                            <small>Dicetak oleh <span t-field="env.user.name"/> pada
                                   <span t-esc="datetime.datetime.now().strftime('%d-%m-%Y %H:%M')"/>
                                â€¢ TeknoParts Inventory</small>
                        </div>
                    </main>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>