<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template QWeb Kartu Stock -->
    <template id="kartu_stock_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- HEADER -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <h3>Kartu Stock Part</h3>
                                <img src="/web/binary/company_logo" style="max-height:60px" alt="Logo"/>
                            </div>
                            <div class="col-6 text-end">
                                <p class="m-0"><strong>Tanggal Cetak:</strong>
                                   <span t-esc="context_today" t-options="{'widget': 'date'}"/>
                                </p>
                            </div>
                        </div>

                        <!-- INFO PART -->
                        <table class="table table-borderless table-sm w-50">
                            <tr><td><strong>Part Number</strong></td>
                                <td><span t-field="o.part_number"/></td></tr>
                            <tr><td><strong>Nama Part</strong></td>
                                <td><span t-field="o.name"/></td></tr>
                            <tr><td><strong>Brand / Model</strong></td>
                                <td><span t-field="o.brand"/> / <span t-field="o.model_hp"/></td></tr>
                            <tr><td><strong>Kategori</strong></td>
                                <td><span t-field="o.category_id.name"/></td></tr>
                            <tr><td><strong>Tipe</strong></td>
                                <td><span t-field="o.part_type"/></td></tr>
                            <tr><td><strong>Garansi (bln)</strong></td>
                                <td><span t-field="o.warranty_month"/></td></tr>
                            <tr><td><strong>Qty On Hand</strong></td>
                                <td><span t-field="o.qty_on_hand"/></td></tr>
                            <tr><td><strong>Status</strong></td>
                                <td><span t-field="o.state"/></td></tr>
                        </table>

                        <!-- MOVEMENT -->
                        <h4 class="mt-4">Riwayat Gerakan Stock</h4>
                        <table class="table table-striped table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Tanggal</th>
                                    <th>Referensi</th>
                                    <th>Asal → Tujuan</th>
                                    <th class="text-end">Qty</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.stock_move_line_ids" t-as="mv">
                                    <tr>
                                        <td><span t-field="mv.date" t-options="{'widget': 'date'}"/></td>
                                        <td><span t-field="mv.reference"/></td>
                                        <td><span t-field="mv.location_id.name"/> →
                                            <span t-field="mv.location_dest_id.name"/></td>
                                        <td class="text-end"><span t-field="mv.qty_done"/></td>
                                        <td><span t-field="mv.state"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- FOOTER -->
                        <div class="footer mt-5 text-center text-muted">
                            <small>Dicetak oleh <span t-field="env.user.name"/>
                                • TeknoParts Inventory</small>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>