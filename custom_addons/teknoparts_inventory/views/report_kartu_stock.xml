<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="kartu_stock_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <div class="page">
          <h2>Kartu Stock</h2>
          <table class="table table-sm">
            <tr><td>Part Number</td><td><span t-field="o.part_number"/></td></tr>
            <tr><td>Name</td><td><span t-field="o.name"/></td></tr>
            <tr><td>Brand</td><td><span t-field="o.brand"/></td></tr>
            <tr><td>On Hand</td><td><span t-field="o.qty_on_hand"/></td></tr>
          </table>
          <h3>Movement History</h3>
          <table class="table table-striped table-sm">
            <thead><tr>
              <th>Date</th><th>Reference</th><th>Qty</th>
            </tr></thead>
            <tbody>
              <t t-foreach="o.stock_move_line_ids" t-as="mv">
                <tr>
                  <td><span t-field="mv.date"/></td>
                  <td><span t-field="mv.reference"/></td>
                  <td><span t-field="mv.qty_done"/></td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
      </t>
    </t>
  </template>
</odoo>