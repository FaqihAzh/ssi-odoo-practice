<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Kategori module -->
  <record id="module_category_teknoparts" model="ir.module.category">
    <field name="name">TeknoParts</field>
    <field name="description">Hak akses gudang spare-part HP</field>
    <field name="sequence">20</field>
  </record>

  <!-- Grup Admin (full) -->
  <record id="group_teknoparts_admin" model="res.groups">
    <field name="name">Admin</field>
    <field name="category_id" ref="module_category_teknoparts"/>
    <field name="users" eval="[(4, ref('base.user_admin'))]"/>
  </record>

  <!-- Grup User -->
  <record id="group_teknoparts_user" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="module_category_teknoparts"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>

  <!-- Grup Viewer -->
  <record id="group_teknoparts_viewer" model="res.groups">
    <field name="name">Viewer</field>
    <field name="category_id" ref="module_category_teknoparts"/>
    <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
  </record>
</odoo>