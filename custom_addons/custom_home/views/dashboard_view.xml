                        </div>

                        <div class="dashboard-app-card app-crm" onclick="navigateToApp('teknoparts_inventory.action_tpart_part')">
                            <div class="dashboard-app-icon">üéØ</div>
                            <div class="dashboard-app-name">TeknoParts</div>
                            <div class="dashboard-app-desc">TeknoParts Inventory</div>
                        </div>

<!--                        <div class="dashboard-app-card app-manufacturing" onclick="navigateToApp('mrp.mrp_production_action')">-->
<!--                            <div class="dashboard-app-icon">‚öôÔ∏è</div>-->
<!--                            <div class="dashboard-app-name">Manufacturing</div>-->
<!--                            <div class="dashboard-app-desc">Production Orders</div>-->
<!--                        </div>-->

<!--                        <div class="dashboard-app-card app-hr" onclick="navigateToApp('hr.open_view_employee_list_my')">-->
<!--                            <div class="dashboard-app-icon">üë•</div>-->
<!--                            <div class="dashboard-app-name">Employees</div>-->
