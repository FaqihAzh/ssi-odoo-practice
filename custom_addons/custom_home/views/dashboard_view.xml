<!--                        </div>-->

<!--                        <div class="dashboard-app-card app-crm" onclick="navigateToApp('crm.crm_lead_all_leads')">-->
<!--                            <div class="dashboard-app-icon">üéØ</div>-->
<!--                            <div class="dashboard-app-name">CRM</div>-->
<!--                            <div class="dashboard-app-desc">Customer Relations</div>-->
<!--                        </div>-->

                        <div class="dashboard-app-card app-settings" onclick="navigateToApp('base_setup.action_general_configuration')">
                            <div class="dashboard-app-icon">‚ö°</div>
                            <div class="dashboard-app-name">Settings</div>
                            <div class="dashboard-app-desc">System Config</div>
                        </div>

                        <div class="dashboard-app-card app-menu" onclick="showMainMenu()">
                            <div class="dashboard-app-icon">‚ãÆ</div>
                            <div class="dashboard-app-name">More Apps</div>
                            <div class="dashboard-app-desc">All Applications</div>
                        </div>
                    </div>
                </div>
            </div>

            <script>
                // Navigation functions
                function navigateToApp(actionName) {
                    console.log('Navigating to:', actionName);

                    // Add click animation
                    event.target.closest('.dashboard-app-card').style.transform = 'scale(0.95)';

                    setTimeout(function() {
                        // Navigate to the application
                        window.location.href = '/web#action=' + actionName;
                    }, 150);
                }

                function showMainMenu() {
                    // Navigate to main Odoo apps menu
                    window.location.href = '/web#action=base.open_module_tree';
                }

                // Entrance animations
                document.addEventListener('DOMContentLoaded', function() {
                    console.log('Dashboard overlay loaded successfully!');

                    // Animate cards entrance
                    const cards = document.querySelectorAll('.dashboard-app-card');
                    cards.forEach(function(card, index) {
                        setTimeout(function() {
                            card.style.transition = 'all 0.6s ease';
                            card.style.opacity = '1';
                            card.style.transform = 'translateY(0)';
                        }, index * 80);
                    });

                    // ESC key to close
                    document.addEventListener('keydown', function(e) {
                        if (e.key === 'Escape') {
                            window.history.back();
                        }
                    });
                });
            </script>
        </t>
    </template>

    <record id="dashboard_menu_action" model="ir.actions.act_url">
        <field name="name">Dashboard</field>
        <field name="url">/web/dashboard</field>
        <field name="target">self</field>
    </record>

    <menuitem
        id="dashboard_menu"
