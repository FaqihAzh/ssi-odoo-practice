<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dashboard_template" name="Custom Dashboard">
        <t t-call="web.layout">
            <div id="dashboard_overlay" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 9999; background: linear-gradient(135deg, rgba(102, 126, 234, 0.95) 0%, rgba(118, 75, 162, 0.95) 100%); backdrop-filter: blur(10px);">
                <style>
                    #dashboard_overlay {
                        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                    }

                    .dashboard-container {
                        max-width: 100dvw;
                        margin: 0 auto;
                        height: 100dvh;
                        overflow-y: auto;
                        display: flex;
                        flex-direction: column;
                        justify-content: center;
                        align-items: center;
                    }

                    .dashboard-header {
                        text-align: center;
                        margin-bottom: 1.5rem;
                        color: white;
                    }

                    .dashboard-header h1 {
                        font-size: 2.5rem;
                        font-weight: 300;
                        margin-bottom: 10px;
                        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
                    }

                    .dashboard-header p {
                        font-size: 1rem;
                        opacity: 0.9;
                        font-weight: 300;
                    }

                    .dashboard-apps-grid {
                        display: grid;
                        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
                        gap: 1.5rem;
                        max-width: 800px;
                        margin: 0 auto;
                    }

                    .dashboard-app-card {
                        background: rgba(255, 255, 255, 0.15);
                        backdrop-filter: blur(10px);
                        border-radius: 20px;
                        padding: 25px 15px;
                        text-align: center;
                        transition: all 0.3s ease;
                        cursor: pointer;
                        border: 1px solid rgba(255, 255, 255, 0.2);
                        opacity: 0;
                        transform: translateY(30px);
                    }

                    .dashboard-app-card:hover {
                        transform: translateY(-8px) scale(1.02);
                        background: rgba(255, 255, 255, 0.25);
                        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
                    }

                    .dashboard-app-icon {
                        width: 50px;
                        height: 50px;
                        margin: 0 auto 15px;
                        border-radius: 12px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        font-size: 20px;
                        color: white;
                        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
                        transition: all 0.3s ease;
                    }

                    .dashboard-app-card:hover .dashboard-app-icon {
                        transform: scale(1.1);
                    }

                    .dashboard-app-name {
                        color: white;
                        font-size: 1rem;
                        font-weight: 500;
                        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
                        margin-bottom: 5px;
                    }

                    .dashboard-app-desc {
                        color: rgba(255, 255, 255, 0.8);
                        font-size: 0.8rem;
                        font-weight: 300;
                        line-height: 1.2;
                    }

                    .app-sales .dashboard-app-icon { background: linear-gradient(135deg, #4facfe, #00f2fe); }
                    .app-inventory .dashboard-app-icon { background: linear-gradient(135deg, #43e97b, #38f9d7); }
                    .app-purchase .dashboard-app-icon { background: linear-gradient(135deg, #fa709a, #fee140); }
                    .app-accounting .dashboard-app-icon { background: linear-gradient(135deg, #a8edea, #fed6e3); }
                    .app-manufacturing .dashboard-app-icon { background: linear-gradient(135deg, #89f7fe, #66a6ff); }
                    .app-hr .dashboard-app-icon { background: linear-gradient(135deg, #fdbb2d, #22c1c3); }
                    .app-crm .dashboard-app-icon { background: linear-gradient(135deg, #ff9a9e, #fecfef); }
                    .app-settings .dashboard-app-icon { background: linear-gradient(135deg, #d299c2, #fef9d7); }
                    .app-menu .dashboard-app-icon { background: linear-gradient(135deg, #667eea, #764ba2); }

                    @media (max-width: 768px) {
                        .dashboard-header h1 { font-size: 2rem; }
                        .dashboard-apps-grid {
                            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
                            gap: 20px;
                        }
                        .dashboard-app-card { padding: 20px 10px; }
                        .dashboard-container { padding: 40px 15px; }
                    }
                </style>

                <div class="dashboard-container">
                    <div class="dashboard-header">
                        <h1>Hallo, Faqih Azhar</h1>
                        <p>Choose your application to get started</p>
                    </div>

                    <div class="dashboard-apps-grid">
                        <div class="dashboard-app-card app-sales" onclick="navigateToApp('sale.action_quotations_with_onboarding')">
